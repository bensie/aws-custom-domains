#!/bin/bash
pwd="`pwd`"

if [ -d build ]; then rm -rf build; fi
mkdir -p build/api-gateway
mkdir -p build/lambda/SetupCustomDomain
mkdir -p build/cloudformation

# API Gateway Handlers
pushd api-gateway
  for func in */; do
    echo "Building $func..."
    pushd $func
      rm -rf node_modules
      yarn install
      zip -r $pwd/build/api-gateway/${func%?}.zip .
    popd
  done
popd

# Lambda Functions
pushd lambda
  pushd SetupCustomDomain
    for func in */; do
      echo "Building $func..."
      pushd $func
        rm -rf node_modules
        yarn install
        zip -r $pwd/build/lambda/SetupCustomDomain/${func%?}.zip .
      popd
    done
  popd
popd

# CloudFormation Template
pushd cloudformation

popd
